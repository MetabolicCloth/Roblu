<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <com.cpjd.roblu.ui.MyPreferenceCategory android:title="Application settings">
        <com.cpjd.roblu.ui.MyEditPreference
            android:defaultValue="0"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:inputType="number"
            android:title="My team number"
            android:key="team_number"
            android:summary="Your team's FRC number" />
        <com.cpjd.roblu.ui.MyPreference
            android:title="UI Customizer"
            android:key="customizer"
            android:summary="Change colors, animations, icons, layouts, and more"/>
    </com.cpjd.roblu.ui.MyPreferenceCategory>

    <com.cpjd.roblu.ui.MyPreferenceCategory android:title="Roblu Cloud">
        <com.cpjd.roblu.ui.MyPreference
            android:title="Sign-in to Roblu Cloud"
            android:key="sync_service"
            android:summary="Sign-in to to Roblu Cloud to enable Roblu Cloud's team syncing services"/>
        <com.cpjd.roblu.ui.MyPreference
            android:title="Create Cloud Team"
            android:key="create_cloud_team"
            android:summary="Create a Roblu Cloud team"/>
        <com.cpjd.roblu.ui.MyPreference
            android:title="Display team code"
            android:key="display_code"
            android:summary="Show the team code so teammates can join the team"/>
        <com.cpjd.roblu.ui.MyPreference
            android:title="Delete team"
            android:key="delete_team"
            android:summary="Delete your Roblu Cloud team"/>
    </com.cpjd.roblu.ui.MyPreferenceCategory>

    <com.cpjd.roblu.ui.MyPreferenceCategory android:title="About">
        <com.cpjd.roblu.ui.MyPreference
            android:title="About"
            android:key="about"
            android:summary="External library information"/>
    </com.cpjd.roblu.ui.MyPreferenceCategory>
</PreferenceScreen>